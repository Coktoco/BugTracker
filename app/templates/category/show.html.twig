{% extends 'base.html.twig' %}

{% block category %}
    {{ 'Category Details'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Category Details'|trans({'%id%': category.id|default('')}) }}</h1>
    {% if category is defined and category|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'Category_ID'|trans }}</dt>
            <dd>{{ category.id }}</dd>
            <dt>{{ 'Added'|trans }}</dt>
            <dd>{{ category.createdAt|format_date('long') }}</dd>
            <dt>{{ 'Updated'|trans }}</dt>
            <dd>{{ category.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'Category'|trans }}</dt>
            <dd>{{ category.title }}</dd>

        </dl>
        <button class="btn btn-light">
            <a href="{{ url('category_index') }}" category="{{ 'Return'|trans }}">
                {{ 'Return'|trans }}
            </a>
        </button>
    {% else %}
        <p>
            {{ 'Category Not Found'|trans }}
        </p>
    {% endif %}
{% endblock %}