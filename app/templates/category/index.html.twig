{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.category_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'category.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'category.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'category.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.updated_at'|trans, 'category.updatedAt') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for category in pagination.items %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.title }}</td>
                    <td>{{ category.createdAt|format_date('long') }}</td>
                    <td>{{ category.updatedAt|format_date('long') }}</td>
                    <td class="row">
                            <a class="col" href="{{ url('category_show', {id: category.id}) }}" title="{{ 'action.show'|trans }}">
                                {{ 'action.show'|trans }}
                            </a>
                            <a class="col" href="{{ url('category_delete', {id: category.id}) }}" title="{{ ' action.delete'|trans }}">
                                {{ 'action.delete'|trans }}
                            </a>
                            <a class="col" href="{{ url('category_edit', {id: category.id}) }}" title="{{ ' action.edit'|trans }}">
                                {{ 'action.edit'|trans }}
                            </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center row">
            <div class="col-4">
            {{ knp_pagination_render(pagination) }}
            </div>
            <div class="col-1">
                <a class="btn btn-light" href="{{ url('category_create')}}" title="{{ 'action.create'|trans }}">
                    {{ 'action.create'|trans }}
                </a>
            </div>
            <div class="col-2">
                <a class="btn btn-light ml-5" href="{{ url('task_index')}}" title="{{ 'task.action.index'|trans }}">
                    {{ 'task.action.index'|trans }}
                </a>
            </div>
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}